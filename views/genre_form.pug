extends layout

block content

    h1 #{title}

    form(method='POST')
        .form-group 
            label(for='name') Genre: 
            input#name.form-control(type='text', placeholder='Fantasy, Poetry etc.' name='name' required value=(undefined===genre ? '' : genre.name))
            button.btn.btn-primary(type='submit', style='margin-top: 1rem;') Submit 
    
    if errors
        ul
            for error in errors 
                li!= error.msg